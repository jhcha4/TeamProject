<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mappers.kysboard-mapper">
	<!-- 리스트 -->
	<select id="boardList" resultType="BoardVo">
	select * from tbl_product_board
	order by p_num 
	</select>
	
	<!-- 상품 보기 -->
	<select id="boardSelectBy" resultType="BoardVo">
		select * from tbl_product_board
		where p_num = #{p_num}
	
	</select>
	<!-- 상품 등록 -->
	<insert id="boardInsert">
	insert into tbl_product_board(p_num,p_name,p_content,p_price,p_main,p_serve)
	values(seq_p_num.nextva, #{p_name}, #{p_content}, #{p_price}, #{p_main}, #{p_serve})
	</insert>
	<!-- 상품 수정 -->
	<update id="boardUpdate">
	update tbl_product_board set 
	p_name = #{p_name},
	p_content = #{p_content},
	p_price = #{p_price}
	where p_num = #{p_num}
	</update>
	<!-- 상품 삭제 -->
	<delete id="boardDelete">
	delete from tbl_product_board
	where p_num = #{p_num}
	</delete>
</mapper>
